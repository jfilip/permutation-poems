---
  env:
    browser: true
    es6: true
    node: true
  rules:
    array-bracket-spacing: [2, "never"]
    curly: 2
    eqeqeq: 2
    jsx-quotes: [2, "prefer-double"]
    key-spacing: [2, {beforeColon: false, afterColon: true}]
    linebreak-style: 2
    no-alert: 2
    no-lone-blocks: 2
    no-lonely-if: 2
    no-eval: 2
    no-mixed-spaces-and-tabs: 2
    no-multi-spaces: 2
    no-multiple-empty-lines: [2, {max: 2}]
    no-nested-ternary: 2
    no-spaced-func: 2
    no-unused-expressions: 2
    quotes: [2, "double"]
    radix: 2
    semi: [2, "always"]
    space-in-parens: [2, "never"]
    strict: [2, "global"]
  parserOptions:
    sourceType: module
